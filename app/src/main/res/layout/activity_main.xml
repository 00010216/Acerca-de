<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/fondo2"
    tools:context="com.example.kcruz.aboutme.MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:src="@drawable/cara" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Karla Cruz"
                android:textAlignment="center"
                android:textColor="#d11d1d"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Ingeniería Informática"
                android:textAlignment="center"
                android:textColor="#500a0a"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#45efaba8"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/email1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="3"
                android:paddingTop="16dp"
                android:text="00010216@uca.edu.sv"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#45f4948f"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/twitter" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="3"
                android:paddingTop="16dp"
                android:text=" @karlaCk_"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#45f17f74"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/phone3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:paddingTop="16dp"
                android:text="7754-5082"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#45f16060"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/github_icon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/git" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:paddingTop="16dp"
                android:text=" @00010216 "
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="16dp"
                android:text="Powered By: Karla Cruz"
                android:textAlignment="center"
                android:textColor="#90fffefe"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
